{
  "name": "core",
  "tasks": {
    "bower": {
      "/out": {
        "settings": "https://github.com/NewSpring/settings.git"
      },
      "/vendor": {
        "mixins": "NewSpring/junction-mixins",
        "framework": "NewSpring/junction-framework",
        "fonts": "NewSpring/newspring-fonts"
      }
    },
    "javascript": {
      "src": "raw/**/*",
      "dest": "out/packages"
    },
    "markup": {
      "src": "raw/**/*",
      "dest": "out/packages",
      "minify": false
    },
    "sass": {
      "src": "raw/**/*",
      "dest": "out/packages"
    },
    "copy": {
      "src": "out/settings/settings",
      "dest": "./",
      "order": "post",
      "ext": [
        "json"
      ]
    },
    "compile-test": {
      "@extend": "javascript",
      "src": "tests/**/*",
      "dest": "out/tests"
    },
    "meteor-load": {
      "src": "out/packages/newspring:core/**/*",
      "dest": "out/packages/newspring:core",
      "org": "newspring",
      "name": "core",
      "package": {
        "versionsFrom": "1.0.3.1",
        "use": {
          "meteor-platform@1.2.1": "both",
          "http@1.0.10": "both",
          "iron:router@1.0.7": "both",
          "accounts-password@1.0.6": "both",
          "bjwiley2:api-tokens@0.0.3": "both",
          "cfs:http-methods@0.0.27": "both",
          "bjwiley2:server-watch@0.0.3": "both",
          "aldeed:collection2@2.3.2": "both",
          "bjwiley2:request-data@0.0.3": "both"
        },
        "export": {
          "Rock": "both",
          "Apollos": "both",
          "HTTP": "server"
        }
      },
      "test": {
        "mocha": "both"
      }
    },
    "meteor": {
      "src": "out",
      "settings": "out/settings/development.json",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:core",
        "mike:mocha",
        "browser-policy",
        "cordova:io.lookback.sdk@https://github.com/lookback/cordova-lookback/tarball/051e720ecd3f42ea512b17f9ce04f76a0dbed75d"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": "meteor --test --settings settings/development.json",
  "scripts": {
    "postinstall": "./norma-ignore/postinstall.coffee"
  }
}
