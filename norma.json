{
  "name": "apollos-core",
  "tasks": {
    "bower": {
      "/workbench": {
        "settings": "https://github.com/NewSpring/settings.git"
      },
      "/vendor": {
        "framework": "NewSpring/junction-framework",
        "fonts": "NewSpring/newspring-fonts"
      }
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "lib/"
    },
    "app-javascript": {
      "@extend": "javascript",
      "src": "sample-app/**/*",
      "dest": "./workbench/"
    },
    "compile-test": {
      "@extend": "javascript",
      "src": "tests/**/*",
      "dest": "workbench/tests"
    },
    "markup": {
      "src": "_source/**/*",
      "dest": "lib/",
      "minify": true
    },
    "app-markup": {
      "@extend": "markup",
      "src": "sample-app/**/*",
      "dest": "./workbench/"
    },
    "sass": {
      "src": "sample-app/**/*",
      "dest": "./workbench/",
      "comb": true,
      "lint": true
    },
    "copy": {
      "src": "lib/**/*",
      "dest": "./workbench/packages/apollos-core/lib/",
      "order": "post"
    },
    "copy-package": {
      "@extend": "copy",
      "src": "package",
      "dest": "./workbench/packages/apollos-core/",
      "order": "post",
      "ext": [
        "js"
      ]
    },
    "meteor-load": {
      "src": "lib/**/*",
      "dest": "./",
      "org": "newspring",
      "name": "apollos-core",
      "package": {
        "versionsFrom": "1.0.3.1",
        "use": {
          "meteor-platform@=1.2.2": "both",
          "http@=1.1.0": "both",
          "reactive-var@=1.0.5": "both",
          "accounts-password@=1.1.1": "both",
          "cfs:http-methods@=0.0.28": "both",
          "bjwiley2:server-watch@=0.0.6": "both",
          "aldeed:collection2@=2.3.3": "both",
          "newspring:components@=0.1.1": "client"
        },
        "npm": {
          "oauth": "0.9.12",
          "ldapjs": "0.7.0"
        },
        "export": {
          "Rock": "both",
          "Apollos": "both",
          "HTTP": "server",
          "serverWatch": "both"
        }
      },
      "test": {
        "mocha": "both"
      }
    },
    "meteor": {
      "dev": true,
      "src": "workbench",
      "settings": "workbench/settings/development.json",
      "packages": [
        "meteor-platform",
        "newspring:apollos-core",
        "iron:router",
        "meteorhacks:cluster",
        "cordova:io.lookback.sdk@https://github.com/lookback/cordova-lookback/tarball/051e720ecd3f42ea512b17f9ce04f76a0dbed75d"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": "meteor --test --settings settings/development.json"
}