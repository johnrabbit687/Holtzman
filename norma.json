{
  "name": "core",
  "tasks": {
    "bower": {
      "/newspring": {
        "settings": "https://github.com/NewSpring/settings.git"
      },
      "/newspring/packages": {
        "mikemocha": "https://github.com/NewSpring/meteor-mocha-web/tarball/5cb884fffc597d7fd51552643aedcf5af9ad1353"
      },
      "/vendor": {
        "framework": "NewSpring/junction-framework",
        "fonts": "NewSpring/newspring-fonts"
      }
    },
    "javascript": {
      "src": "_source/**/*",
      "dest": "newspring/"
    },
    "markup": {
      "src": "_source/**/*",
      "dest": "newspring/",
      "minify": true
    },
    "sass": {
      "src": "_source/**/*",
      "dest": "newspring/",
      "comb": true,
      "lint": true
    },
    "copy": {
      "src": "newspring/settings/development",
      "dest": "./",
      "order": "post",
      "ext": [
        "json"
      ]
    },
    "compile-test": {
      "@extend": "javascript",
      "src": "tests/**/*",
      "dest": "newspring/tests"
    },
    "meteor-load": {
      "src": "newspring/packages/newspring:core/**/*",
      "dest": "newspring/packages/newspring:core",
      "org": "newspring",
      "name": "core",
      "package": {
        "versionsFrom": "1.0.3.1",
        "use": {
          "meteor-platform@1.2.1": "both",
          "http@1.0.10": "both",
          "reactive-var@1.0.5": "both",
          "iron:router@1.0.7": "both",
          "accounts-password@1.0.6": "both",
          "bjwiley2:api-tokens@0.0.3": "both",
          "cfs:http-methods@0.0.27": "both",
          "bjwiley2:server-watch@=0.0.5": "both",
          "aldeed:collection2@2.3.2": "both",
          "bjwiley2:request-data@0.0.3": "both"
        },
        "npm": {
          "oauth": "0.9.12",
          "ldapjs": "0.7.0"
        },
        "export": {
          "Rock": "both",
          "Apollos": "both",
          "HTTP": "server",
          "Router": "both",
          "serverWatch": "both"
        }
      },
      "test": {
        "mocha": "both"
      }
    },
    "meteor": {
      "src": "newspring",
      "settings": "newspring/settings/development.json",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:core",
        "velocity:core@=0.6.0",
        "mike:mocha",
        "cordova:io.lookback.sdk@https://github.com/lookback/cordova-lookback/tarball/051e720ecd3f42ea512b17f9ce04f76a0dbed75d"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": "meteor --test --settings settings/development.json",
  "scripts": {
    "postinstall": "./norma-ignore/postinstall.coffee"
  }
}
