{
  "name": "core",
  "tasks": {
    "bower": {
      "/out": {
        "settings": "https://github.com/NewSpring/settings.git"
      }
    },
    "javascript": {
      "src": "raw/**/*",
      "dest": "out/packages"
    },
    "markup": {
      "src": "raw/**/*",
      "dest": "out/packages",
      "minify": false
    },
    "copy": {
      "src": "out/packages/",
      "out": "/",
      "dest": "./",
      "order": "post"
    },
    "meteor-load": {
      "src": "out/packages/newspring:core/**/*",
      "dest": "out/packages/newspring:core",
      "org": "newspring",
      "name": "core",
      "package": {
        "versionsFrom": "1.0.3.1",
        "use": {
          "meteor-platform@1.2.1": "both",
          "http@1.0.10": "both",
          "iron:router@1.0.7": "both",
          "accounts-password@1.0.6": "both",
          "bjwiley2:api-tokens@0.0.3": "both",
          "cfs:http-methods@0.0.27": "both",
          "bjwiley2:server-watch@0.0.3": "both",
          "aldeed:collection2@2.3.2": "both",
          "matb33:collection-hooks@0.7.9": "both",
          "bjwiley2:request-data@0.0.3": "both"
        },
        "export": {
          "Rock": "both",
          "Apollos": "both"
        }
      },
      "test": {
        "mocha-casperjs": "both"
      }
    },
    "meteor": {
      "src": "out",
      "settings": "out/settings/settings.json",
      "build": {
        "dest": "build",
        "server": "localhost:3000"
      },
      "packages": [
        "meteor-platform",
        "newspring:core",
        "msavin:mongol"
      ],
      "platforms": [
        "server",
        "browser",
        "ios"
      ]
    }
  },
  "test": {
    "before": "meteor run",
    "mocha-casperjs": {
      "src": "out/tests/**/*"
    },
    "after": "meteor close"
  },
  "scripts": {
    "postinstall": "./norma-ignore/postinstall.coffee"
  }
}
